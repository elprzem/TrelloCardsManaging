<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/lists_tabs"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:pstsTabPaddingLeftRight="@dimen/tabs_vertical_margin"
        android:paddingLeft="@dimen/tabs_margin"
        android:paddingStart="@dimen/tabs_margin"
        android:paddingRight="@dimen/tabs_margin"
        android:paddingEnd="@dimen/tabs_margin" />

        <android.support.v4.view.ViewPager android:id="@+id/pager"
            android:layout_width="match_parent" android:layout_height="match_parent"
            tools:context="co.blastlab.gpnt.activities.NewsListActivity" />

</LinearLayout>
